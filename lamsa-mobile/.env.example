# ====================================================================
# Lamsa Mobile App Environment Configuration
# ====================================================================
# This file contains all environment variables needed for the mobile app
# Copy this file to .env and set your actual values
# NEVER commit .env files to version control!
#
# IMPORTANT: All client-side variables MUST be prefixed with EXPO_PUBLIC_
# These variables are embedded in the app during build time

# ====================================================================
# REQUIRED CONFIGURATIONS (Must be set for basic functionality)
# ====================================================================

# Supabase Configuration
# Get these from your Supabase project dashboard: https://app.supabase.com
EXPO_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# API Configuration
# For local development: Use your machine's IP address instead of localhost
# Find your IP: On Mac/Linux: ifconfig | grep inet
#              On Windows: ipconfig
# Example: http://192.168.1.100:3000
EXPO_PUBLIC_API_URL=http://localhost:3000

# App Configuration
EXPO_PUBLIC_APP_NAME=Lamsa
EXPO_PUBLIC_DEFAULT_LANGUAGE=ar
EXPO_PUBLIC_CURRENCY=JOD
EXPO_PUBLIC_TIMEZONE=Asia/Amman

# Environment
EXPO_PUBLIC_ENV=development

# ====================================================================
# LOCALIZATION & REGIONAL SETTINGS
# ====================================================================

# Supported Languages (comma-separated)
EXPO_PUBLIC_SUPPORTED_LANGUAGES=ar,en

# RTL Support
EXPO_PUBLIC_ENABLE_RTL=true

# Date/Time Format
EXPO_PUBLIC_DATE_FORMAT=DD/MM/YYYY
EXPO_PUBLIC_TIME_FORMAT=HH:mm

# ====================================================================
# PAYMENT INTEGRATION (Tap Payment - Jordan)
# ====================================================================

# Tap Payment Gateway Public Key
# Get from: https://www.tap.company/jo/
EXPO_PUBLIC_TAP_PUBLIC_KEY=pk_test_your_public_key_here

# Payment Settings
EXPO_PUBLIC_PAYMENT_CURRENCY=JOD
EXPO_PUBLIC_ENABLE_TEST_PAYMENTS=true

# ====================================================================
# MAPS & LOCATION SERVICES
# ====================================================================

# Google Maps API Key (for location services)
# Get from: https://console.cloud.google.com/
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Default Map Region (Jordan)
EXPO_PUBLIC_DEFAULT_LATITUDE=31.9454
EXPO_PUBLIC_DEFAULT_LONGITUDE=35.9284
EXPO_PUBLIC_DEFAULT_LATITUDE_DELTA=0.1
EXPO_PUBLIC_DEFAULT_LONGITUDE_DELTA=0.1

# ====================================================================
# PUSH NOTIFICATIONS
# ====================================================================

# Expo Push Notification Settings
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_NOTIFICATION_SOUND=default

# OneSignal App ID (if using OneSignal)
EXPO_PUBLIC_ONESIGNAL_APP_ID=your_onesignal_app_id

# ====================================================================
# ANALYTICS & MONITORING
# ====================================================================

# Google Analytics
EXPO_PUBLIC_GA_TRACKING_ID=UA-XXXXXXXX-X

# Sentry DSN (for crash reporting)
EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
EXPO_PUBLIC_SENTRY_ENVIRONMENT=development

# Analytics Settings
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=true

# ====================================================================
# FEATURE FLAGS
# ====================================================================

# Feature Toggles
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_ENABLE_SOCIAL_LOGIN=false
EXPO_PUBLIC_ENABLE_DARK_MODE=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_IMAGE_COMPRESSION=true
EXPO_PUBLIC_ENABLE_REVIEWS=true
EXPO_PUBLIC_ENABLE_FAVORITES=true
EXPO_PUBLIC_ENABLE_CHAT=false

# Development Features
EXPO_PUBLIC_ENABLE_DEBUG_MODE=true
EXPO_PUBLIC_SHOW_API_LOGS=true
EXPO_PUBLIC_ENABLE_MOCK_DATA=false

# ====================================================================
# PERFORMANCE & OPTIMIZATION
# ====================================================================

# Image Optimization
EXPO_PUBLIC_IMAGE_QUALITY=0.8
EXPO_PUBLIC_MAX_IMAGE_WIDTH=1920
EXPO_PUBLIC_MAX_IMAGE_HEIGHT=1080

# Cache Settings (in seconds)
EXPO_PUBLIC_CACHE_TTL=300
EXPO_PUBLIC_IMAGE_CACHE_TTL=86400

# API Request Settings
EXPO_PUBLIC_API_TIMEOUT=30000
EXPO_PUBLIC_MAX_RETRY_ATTEMPTS=3

# ====================================================================
# SECURITY SETTINGS
# ====================================================================

# Session Configuration
EXPO_PUBLIC_SESSION_TIMEOUT=1800000
EXPO_PUBLIC_REMEMBER_ME_DURATION=2592000000

# Security Features
EXPO_PUBLIC_ENABLE_SSL_PINNING=false
EXPO_PUBLIC_ENABLE_ROOT_DETECTION=false
EXPO_PUBLIC_ENABLE_SCREENSHOT_PROTECTION=false

# ====================================================================
# BUSINESS CONFIGURATION
# ====================================================================

# Platform Fee Structure
EXPO_PUBLIC_PLATFORM_FEE_UNDER_25=2
EXPO_PUBLIC_PLATFORM_FEE_OVER_25=5
EXPO_PUBLIC_FEE_THRESHOLD=25

# Business Hours (24-hour format)
EXPO_PUBLIC_DEFAULT_OPEN_TIME=09:00
EXPO_PUBLIC_DEFAULT_CLOSE_TIME=21:00

# Booking Settings
EXPO_PUBLIC_MIN_BOOKING_ADVANCE=60
EXPO_PUBLIC_MAX_BOOKING_ADVANCE=10080
EXPO_PUBLIC_BOOKING_CANCELLATION_WINDOW=120

# ====================================================================
# DEEP LINKING & UNIVERSAL LINKS
# ====================================================================

EXPO_PUBLIC_APP_SCHEME=lamsa
EXPO_PUBLIC_UNIVERSAL_LINK_DOMAIN=https://lamsa.com

# ====================================================================
# BUILD CONFIGURATION
# ====================================================================

# App Version Info
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_BUILD_NUMBER=1

# Store URLs (for app updates)
EXPO_PUBLIC_APP_STORE_URL=https://apps.apple.com/app/lamsa/id123456789
EXPO_PUBLIC_PLAY_STORE_URL=https://play.google.com/store/apps/details?id=com.lamsa.app

# ====================================================================
# DEVELOPMENT TOOLS
# ====================================================================

# React Native Debugger
EXPO_PUBLIC_ENABLE_NETWORK_INSPECTOR=true
EXPO_PUBLIC_ENABLE_REDUX_DEVTOOLS=true

# Storybook (if using)
EXPO_PUBLIC_LOAD_STORYBOOK=false
EXPO_PUBLIC_STORYBOOK_PORT=7007

# ====================================================================
# PRODUCTION CHECKLIST
# ====================================================================
# Before building for production, ensure:
# ✅ EXPO_PUBLIC_ENV=production
# ✅ All API URLs point to production endpoints
# ✅ Supabase credentials are for production project
# ✅ Payment gateway uses production keys
# ✅ Analytics and monitoring are configured
# ✅ Debug features are disabled
# ✅ Mock data is disabled
# ✅ SSL pinning is enabled (if required)
# ✅ Proper app version and build number
# ✅ Store URLs are correct