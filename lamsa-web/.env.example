# ====================================================================
# Lamsa Web Dashboard Environment Configuration
# ====================================================================
# This file contains all environment variables needed for the web dashboard
# Copy this file to .env.local and set your actual values
# NEVER commit .env.local files to version control!
#
# IMPORTANT: Public variables MUST be prefixed with NEXT_PUBLIC_
# Server-side only variables should NOT have this prefix

# ====================================================================
# REQUIRED CONFIGURATIONS (Must be set for basic functionality)
# ====================================================================

# Supabase Configuration
# Get these from your Supabase project dashboard: https://app.supabase.com
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Service key for server-side operations (DO NOT expose to client!)
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
API_INTERNAL_URL=http://localhost:3000

# App Configuration
NEXT_PUBLIC_APP_NAME=Lamsa
NEXT_PUBLIC_APP_TITLE=Lamsa - Beauty Services Platform
NEXT_PUBLIC_APP_DESCRIPTION=Book beauty services across Jordan
NEXT_PUBLIC_DEFAULT_LANGUAGE=ar
NEXT_PUBLIC_CURRENCY=JOD
NEXT_PUBLIC_TIMEZONE=Asia/Amman

# Environment
NEXT_PUBLIC_ENV=development
NODE_ENV=development

# ====================================================================
# AUTHENTICATION (NextAuth.js)
# ====================================================================

# NextAuth Configuration (Server-side only)
# Generate secret: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here_minimum_32_characters
NEXTAUTH_URL=http://localhost:3001

# OAuth Providers (if enabled)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret

# ====================================================================
# LOCALIZATION & REGIONAL SETTINGS
# ====================================================================

# Supported Languages (comma-separated)
NEXT_PUBLIC_SUPPORTED_LANGUAGES=ar,en

# RTL Support
NEXT_PUBLIC_ENABLE_RTL=true

# Date/Time Format
NEXT_PUBLIC_DATE_FORMAT=DD/MM/YYYY
NEXT_PUBLIC_TIME_FORMAT=HH:mm

# ====================================================================
# PAYMENT INTEGRATION (Tap Payment - Jordan)
# ====================================================================

# Tap Payment Gateway
# Get from: https://www.tap.company/jo/
NEXT_PUBLIC_TAP_PUBLIC_KEY=pk_test_your_public_key_here
TAP_SECRET_KEY=sk_test_your_secret_key_here

# Payment Settings
NEXT_PUBLIC_PAYMENT_CURRENCY=JOD
NEXT_PUBLIC_VAT_RATE=0.15

# ====================================================================
# MAPS & LOCATION SERVICES
# ====================================================================

# Google Maps API Key
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Default Map Center (Jordan)
NEXT_PUBLIC_DEFAULT_LATITUDE=31.9454
NEXT_PUBLIC_DEFAULT_LONGITUDE=35.9284
NEXT_PUBLIC_DEFAULT_ZOOM=11

# ====================================================================
# ANALYTICS & MONITORING
# ====================================================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Vercel Analytics (if deployed on Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Sentry Error Tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=lamsa-web
SENTRY_ENVIRONMENT=development

# Hotjar (User behavior analytics)
NEXT_PUBLIC_HOTJAR_SITE_ID=your_hotjar_site_id

# ====================================================================
# SEO & METADATA
# ====================================================================

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3001
NEXT_PUBLIC_SITE_DOMAIN=lamsa.com

# Social Media
NEXT_PUBLIC_TWITTER_HANDLE=@lamsa_jo
NEXT_PUBLIC_FACEBOOK_PAGE_ID=your_facebook_page_id
NEXT_PUBLIC_INSTAGRAM_HANDLE=@lamsa.jo

# Open Graph
NEXT_PUBLIC_OG_IMAGE=/images/og-image.jpg
NEXT_PUBLIC_OG_IMAGE_WIDTH=1200
NEXT_PUBLIC_OG_IMAGE_HEIGHT=630

# ====================================================================
# FEATURE FLAGS
# ====================================================================

# Feature Toggles
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_COOKIE_CONSENT=true
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=false
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_BLOG=false
NEXT_PUBLIC_ENABLE_CHAT_SUPPORT=false

# Admin Features
NEXT_PUBLIC_ENABLE_ADMIN_DASHBOARD=true
NEXT_PUBLIC_ENABLE_PROVIDER_DASHBOARD=true
NEXT_PUBLIC_ENABLE_ANALYTICS_DASHBOARD=true

# Development Features
NEXT_PUBLIC_ENABLE_DEBUG_MODE=true
NEXT_PUBLIC_SHOW_API_LOGS=true

# ====================================================================
# CDN & ASSETS
# ====================================================================

# CDN Configuration
NEXT_PUBLIC_CDN_URL=
NEXT_PUBLIC_IMAGE_DOMAINS=localhost,your-cdn-domain.com

# Image Optimization
NEXT_PUBLIC_IMAGE_QUALITY=75
NEXT_PUBLIC_IMAGE_DEVICE_SIZES=640,750,828,1080,1200,1920,2048,3840
NEXT_PUBLIC_IMAGE_FORMATS=image/webp

# ====================================================================
# EMAIL SERVICE (Server-side)
# ====================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Email Settings
EMAIL_FROM=noreply@lamsa.com
EMAIL_REPLY_TO=support@lamsa.com

# ====================================================================
# SECURITY SETTINGS
# ====================================================================

# Content Security Policy
NEXT_PUBLIC_CSP_REPORT_URI=/api/csp-report

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ====================================================================
# PERFORMANCE & OPTIMIZATION
# ====================================================================

# Static Generation
REVALIDATE_INTERVAL=3600

# API Cache Settings
API_CACHE_TTL=300
STATIC_CACHE_TTL=31536000

# Build Configuration
ANALYZE_BUNDLE=false
DISABLE_TELEMETRY=false

# ====================================================================
# DATABASE (Server-side only)
# ====================================================================

# Direct database access (for server-side queries)
DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres

# Connection Pool Settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ====================================================================
# REDIS CACHE (Server-side only)
# ====================================================================

REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ====================================================================
# FILE STORAGE
# ====================================================================

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=lamsa-uploads

# Cloudinary (Alternative to S3)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ====================================================================
# DEPLOYMENT & CI/CD
# ====================================================================

# Vercel Configuration
VERCEL_URL=
VERCEL_GIT_COMMIT_SHA=
VERCEL_GIT_COMMIT_MESSAGE=

# Preview Protection
PREVIEW_SECRET=your_preview_secret_here

# ====================================================================
# DEVELOPMENT TOOLS
# ====================================================================

# Storybook
STORYBOOK_PORT=6006
CHROMATIC_PROJECT_TOKEN=your_chromatic_token

# Testing
CYPRESS_BASE_URL=http://localhost:3001
PLAYWRIGHT_BASE_URL=http://localhost:3001

# ====================================================================
# PRODUCTION CHECKLIST
# ====================================================================
# Before deploying to production, ensure:
# ✅ NODE_ENV=production
# ✅ NEXT_PUBLIC_ENV=production
# ✅ All URLs point to production endpoints
# ✅ Supabase credentials are for production project
# ✅ NextAuth secret is secure and unique
# ✅ Payment gateway uses production keys
# ✅ Analytics IDs are configured
# ✅ Sentry is configured for production
# ✅ CDN URLs are set
# ✅ Email service is configured
# ✅ Debug features are disabled
# ✅ CSP is properly configured
# ✅ All secrets use environment variables