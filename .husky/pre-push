#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸ” Running pre-push checks..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Track if any checks fail
FAILED=0

# 1. Check for console.log statements
echo "\nğŸ“‹ Checking for console.log statements..."
CONSOLE_LOGS=$(git diff --cached --name-only | xargs grep -l "console\.\(log\|error\|warn\|debug\)" 2>/dev/null | grep -v node_modules | grep -v "\.test\." | grep -v "\.spec\." || true)
if [ ! -z "$CONSOLE_LOGS" ]; then
  echo "${YELLOW}âš ï¸  Warning: console statements found in:${NC}"
  echo "$CONSOLE_LOGS"
  echo "${YELLOW}Consider using the logger utility instead${NC}"
fi

# 2. Check for TODO comments
echo "\nğŸ“‹ Checking for TODO comments..."
TODO_COUNT=$(git grep -n "TODO" -- ':!node_modules' ':!*.md' ':!.husky' | wc -l)
if [ $TODO_COUNT -gt 0 ]; then
  echo "${YELLOW}âš ï¸  Found $TODO_COUNT TODO comments${NC}"
  echo "High priority TODOs:"
  git grep -n "TODO.*\(security\|Security\|SECURITY\|jwt\|JWT\|auth\|Auth\|AUTH\)" -- ':!node_modules' ':!*.md' || true
fi

# 3. Check for debugging code (only critical ones)
echo "\nğŸ“‹ Checking for debugging code..."
DEBUG_CODE=$(git grep -n "debugger;" -- ':!node_modules' ':!*.md' ':!package-lock.json' || true)
if [ ! -z "$DEBUG_CODE" ]; then
  echo "${RED}âŒ Error: Debugging code found:${NC}"
  echo "$DEBUG_CODE"
  FAILED=1
fi

# 4. Run type checking for TypeScript projects
echo "\nğŸ“‹ Running TypeScript type checks..."

# Check API (allow warnings)
if [ -d "beautycort-api" ]; then
  echo "Checking beautycort-api..."
  cd beautycort-api
  ERROR_COUNT=$(npm run typecheck 2>&1 | grep "error TS" | wc -l)
  if [ $ERROR_COUNT -gt 200 ]; then
    echo "${RED}âŒ Too many TypeScript errors in API: $ERROR_COUNT${NC}"
    FAILED=1
  else
    echo "${GREEN}âœ… API type check acceptable ($ERROR_COUNT errors)${NC}"
  fi
  cd ..
fi

# Check Mobile (allow warnings)
if [ -d "beautycort-mobile" ]; then
  echo "Checking beautycort-mobile..."
  cd beautycort-mobile
  ERROR_COUNT=$(npx tsc --noEmit --skipLibCheck 2>&1 | grep "error TS" | wc -l)
  if [ $ERROR_COUNT -gt 2000 ]; then
    echo "${RED}âŒ Too many TypeScript errors in Mobile: $ERROR_COUNT${NC}"
    FAILED=1
  else
    echo "${GREEN}âœ… Mobile type check acceptable ($ERROR_COUNT errors)${NC}"
  fi
  cd ..
fi

# 5. Check for large files
echo "\nğŸ“‹ Checking for large files..."
LARGE_FILES=$(find . -type f -size +1M -not -path "*/node_modules/*" -not -path "*/.git/*" -not -path "*/dist/*" -not -path "*/build/*" | head -5)
if [ ! -z "$LARGE_FILES" ]; then
  echo "${YELLOW}âš ï¸  Warning: Large files detected (>1MB):${NC}"
  echo "$LARGE_FILES"
  echo "${YELLOW}Consider using Git LFS for large files${NC}"
fi

# 6. Check for sensitive data patterns
echo "\nğŸ“‹ Checking for sensitive data..."
SENSITIVE=$(git diff --cached --name-only | xargs grep -E "(password|secret|key|token)\s*=\s*[\"'][^\"']+[\"']" 2>/dev/null | grep -v "\.example" | grep -v "\.md" || true)
if [ ! -z "$SENSITIVE" ]; then
  echo "${RED}âŒ Error: Possible hardcoded credentials found:${NC}"
  echo "$SENSITIVE"
  FAILED=1
fi

# Summary
echo "\nâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
if [ $FAILED -eq 0 ]; then
  echo "${GREEN}âœ… All pre-push checks passed!${NC}"
else
  echo "${RED}âŒ Pre-push checks failed!${NC}"
  echo "Please fix the issues above before pushing."
  exit 1
fi

echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"